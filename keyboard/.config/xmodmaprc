! caps lock -> control
! menu -> hyper
! credits: https://wiki.archlinux.org/index.php/Xmodmap

clear      lock
clear   control
clear      mod1
clear      mod2
clear      mod3
clear      mod4
clear      mod5
! menu becomes hyper modifier
keycode     135 = Hyper_R
! CapsLock to Control, Shift+CapsLock to CapsLock
! keycode      66 = Control_L Caps_Lock NoSymbol NoSymbol
! CapsLock to Control
keycode      66 = Control_L
keycode      37 = Control_L
add     control = Control_L Control_R
add        mod1 = Alt_L Alt_R Meta_L
add        mod2 = Num_Lock
add        mod3 = Hyper_R
add        mod4 = Super_L Super_R
add        mod5 = Mode_switch ISO_Level3_Shift
